doctype
html(ng-app='app' ng-controller='main')
    head
        block vars
            - path="./"
        meta(charset="utf-8")
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
        title Авторские картины
        base(href="test.com" target="_self")
        link(href='http://fonts.googleapis.com/css?family=Roboto:100,400,500,400italic,700&subset=cyrillic-ext,latin' rel='stylesheet' type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css')
        block styles
            link(href="#{path}lib/normalize.css" rel="stylesheet")
            link(href="#{path}lib/photoSwipe/photoswipe.css" rel="stylesheet")
            link(href="#{path}lib/photoSwipe/default-skin/default-skin.css" rel="stylesheet")
            link(href="#{path}index.css" rel="stylesheet")
    body
        img(src='./images/interior.jpg').img-interior
        include ./includes/nav.jade
        .main-area
            img(src='./images/painter.jpg').img-painter
            .about-project
                include ./includes/about-project.jade
            div(ng-controller='gallery').gallery
                include ./includes/gallery.jade

        include ./includes/photoswipe.jade






    block scripts
        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
        script(src="#{path}lib/photoSwipe/photoswipe.js")
        script(src="#{path}lib/photoSwipe/photoswipe-ui-default.min.js")
        script(src="#{path}lib/imagesLoaded/imagesloaded.pkgd.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.js")
        script(src="#{path}app.js")
        script.
               window.picturesArray = [];
               var picturesList = !{JSON.stringify(pictures)};
               i =0
               for(pic in picturesList) {
                    window.picturesArray.push({"index": pic, "fileName": picturesList[pic].fileName, "size": picturesList[pic].size})
                    i++
               }
